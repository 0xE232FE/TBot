<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="theme-color" content="#212529">
    <link rel="icon" type="image/jpg" href="~/favicon.ico">
    <link rel="manifest" href="~/manifest.json" asp-append-version="true"/>
    <!-- iOS support -->
    <link rel="apple-touch-icon" href="/img/TBot logo 72.png" />
    <link rel="apple-touch-icon" href="/img/TBot logo 96.png" />
    <link rel="apple-touch-icon" href="/img/TBot logo 128.png" />
    <link rel="apple-touch-icon" href="/img/TBot logo 144.png" />
    <link rel="apple-touch-icon" href="/img/TBot logo 152.png" />
    <link rel="apple-touch-icon" href="/img/TBot logo 192.png" />
    <link rel="apple-touch-icon" href="/img/TBot logo 384.png" />
    <link rel="apple-touch-icon" href="/img/TBot logo 512.png" />
    <meta name="apple-mobile-web-app-status-bar" content="#212529" />

    <title>T-Bot</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TBot.WebUI.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand ms-3 ms-md-0" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/tbot-logo.jpg" style="max-height:50px" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Settings" asp-action="Index">Settings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Logging" asp-action="Index">Logging</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Ogame" asp-action="Index">Ogame</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid main-container">
        <div id="backdrop">
            <div class="text-center loading">
                <div class="spinner-border" role="status">
                </div>
            </div>
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    @await RenderSectionAsync("Scripts", required: false)

    <script type="text/javascript">
        if ("serviceWorker" in navigator) {
            window.addEventListener("load", function () {
                navigator.serviceWorker
                    .register("/serviceWorker.js")
                    .then(res => console.log("service worker registered"))
                    .catch(err => console.log("service worker not registered", err))
            })
        }
    </script>
</body>
</html>
